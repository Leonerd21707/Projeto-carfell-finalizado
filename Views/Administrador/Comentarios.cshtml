@using Senai.Sprint4.Carfel.Models;
@section styles{
    <link href="/css/listagem.css" rel="stylesheet" type="text/css" />
    }
@{
    ViewBag.Title = "Aprove ou Rejeite um comenttario";
    Layout = "MasterPageLogado";
}

<div class="comentarios">

<h1>Seleção de comentarios</h1>
<style>
textarea{
    resize: none;
}
</style>

@ViewBag.Mensagem

<table class="tabela">
    <thead>
        <tr>
            <th>Id</th>
           
            
            <th>Nome</th>
           
           
            <th>Comentario</th>
            
            
            <th>Data Criação</th>
           
           
            <th>Status</th>
            
           
            <th>ações</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewData["comentarios"] as List<ComentarioModel>)
        {
            <tr>
                

                <td>
                    @item.Id
                </td>
                 

                
                <td>
                    @item.Usuario.Nome
                </td>
               

               
                <td>
                    @item.Comentario
                </td>
               

               
                <td>
                    @item.DataCriacao.ToShortDateString()
                </td>
               
                
                <td>
                    @item.Aprovado
               </td>
              

            
                <td>
                    
                    @if(item.Aprovado){
                       <a href="/Administrador/Rejeitar?id=@item.Id">Rejeitar</a>
                    } else {
                       <a href="/Administrador/Aprovar?id=@item.Id">Aprovar</a>
                    }
                    
                    
                </td>
              
            </tr>
        }
    </tbody>
</table>
</div>